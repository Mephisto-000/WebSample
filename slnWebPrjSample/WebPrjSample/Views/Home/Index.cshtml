@model IEnumerable<WebPrjSample.Models.tProduct>
@{
    ViewBag.Title = "產品列表";
}

<div class="row" style="margin-top:20px">
    @foreach (var item in Model)
    {
        <div class="col-md-4">
            <img src="~/images/@item.fImg"
                 style="width:200px;height:270px;" />
            <h4>@item.fName</h4>
            <p>單價:@item.fPrice</p>
            <p>
                <a href="@Url.Action("AddCar", "Member")?fPId=@item.fPId"
                   class="btn btn-outline-dark">加入購物車</a>
            </p>
        </div>
    }
</div>